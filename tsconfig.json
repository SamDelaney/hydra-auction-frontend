{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "api": [
        "./public/dist/api.d.ts"
      ],
      "src/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./public/dist",
      "./public",
      "./node_modules/@types"
    ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src"
  ]
}